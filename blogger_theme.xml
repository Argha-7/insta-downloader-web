                --light: #f8fafc;
                --white: #ffffff;
                --glass: rgba(255, 255, 255, 0.7);
                --glass-border: rgba(255, 255, 255, 0.3);
                --shadow: 0 20px 50px rgba(0, 0, 0, 0.1);
                --grad: linear-gradient(135deg, #6366f1 0%, #06b6d4 100%);
