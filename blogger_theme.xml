        <script>
            const API_BASE = "https://argha-7-insta-downloader-web.hf.space";

            async function startDownload() {
                const url = document.getElementById('urlInput').value.trim();
                const btn = document.getElementById('downloadBtn');
                const progressUI = document.getElementById('progressUI');
                const statusText = document.getElementById('statusText');
                const progressBar = document.getElementById('progressBar');
                const resultDiv = document.getElementById('result');

                if (!url) {
                    alert('Please paste a link first!');
                    return;
                }

                // Reset and Show Progress
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Loading...';
                resultDiv.style.display = 'none';
                progressUI.style.display = 'flex';
                progressBar.style.width = '20%';
                statusText.innerText = 'Connecting to server...';

                try {
                    const response = await fetch(`${API_BASE}/download`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ url: url })
                    });
                    const data = await response.json();

                    if (data.success) {
                        if (data.status === 'ready') {
                            showSuccess(data);
                        } else if (data.status === 'pending') {
                            statusText.innerText = 'Server blocked. Activating Smart Backup...';
                            progressBar.style.width = '50%';
                            pollStatus(data.job_id);
                        }
                    } else {
                        showError(data.message);
                    }
                } catch (e) {
                    showError('Server is currently busy. Try again.');
                }
            }

            async function pollStatus(jobId) {
                const statusText = document.getElementById('statusText');
                const progressBar = document.getElementById('progressBar');
                let count = 0;

                const interval = setInterval(async () => {
                    count++;
                    if (count > 60) { clearInterval(interval); showError('Process Timeout.'); return; }

                    try {
                        const res = await fetch(`${API_BASE}/status/${jobId}`);
                        const data = await res.json();

                        if (data.status === 'ready') {
                            clearInterval(interval);
                            showSuccess({
                                filename: data.filename,
                                title: "Instagram Video",
                                thumbnail: "https://icons.iconarchive.com/icons/paomedia/small-n-flat/512/social-instagram-icon.png"
                            });
                        } else {
                            statusText.innerText = `GitHub Processing... (${count * 5}s)`;
                            progressBar.style.width = `${50 + (count * 0.7)}%`;
                        }
                    } catch (e) {}
                }, 5000);
            }

            function showSuccess(data) {
                document.getElementById('progressUI').style.display = 'none';
                const res = document.getElementById('result');
                res.style.display = 'block';
                
                document.getElementById('resTitle').innerText = data.title || "Instagram Video";
                document.getElementById('resThumb').src = data.thumbnail || "https://icons.iconarchive.com/icons/paomedia/small-n-flat/512/social-instagram-icon.png";
                document.getElementById('downloadLink').href = `${API_BASE}/files/${data.filename}`;
                
                resetBtn();
            }

            function copyLink() {
                const url = document.getElementById('urlInput').value;
                navigator.clipboard.writeText(url).then(() => {
                    alert('Link copied to clipboard!');
                });
            }

            function showError(msg) {
                document.getElementById('statusText').innerText = msg;
                document.getElementById('statusText').style.color = '#ef4444';
                resetBtn();
            }

            function resetBtn() {
                const btn = document.getElementById('downloadBtn');
                btn.disabled = false;
                btn.innerText = 'Download Now';
            }

            // Limit Logic
            function isUserSignedUp() {
                return localStorage.getItem('insta_signed_up') === 'true';
            }

            async function updateLimits() {
                const signedUp = isUserSignedUp();
                try {
                    const res = await fetch(`${API_BASE}/check-limit`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ signed_up: signedUp })
                    });
                    const data = await res.json();
                    document.getElementById('limitText').innerText = `Downloads Left: ${data.remaining} / ${data.limit}`;
                    
                    if (data.remaining <= 0 && !signedUp) {
                        setTimeout(() => { document.getElementById('signupModal').style.display = 'flex'; }, 2000);
                    }
                } catch (e) {
                    document.getElementById('limitText').innerText = "Usage limit may apply";
                }
            }

            function simulatedSignup() {
                const email = document.getElementById('signupEmail').value;
                if (!email.includes('@')) { alert('Please enter valid email'); return; }
                localStorage.setItem('insta_signed_up', 'true');
                closeModal();
                updateLimits();
                alert('Success! You now have 20 daily downloads.');
            }

            function closeModal() {
                document.getElementById('signupModal').style.display = 'none';
            }

            // Replace startDownload Fetch to include signup status
            const originalFetch = window.fetch;
            window.fetch = function() {
                if (arguments[0].includes('/download') && arguments[1] && arguments[1].body) {
                    const body = JSON.parse(arguments[1].body);
                    body.signed_up = isUserSignedUp();
                    arguments[1].body = JSON.stringify(body);
                }
                return originalFetch.apply(this, arguments);
            };

            updateLimits();
        </script>
