<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html>
<html b:css='false' b:defaultwidgetversion='2' b:layoutsversion='3'
    xmlns='http://www.w3.org/1999/xhtml'
    xmlns:b='http://www.google.com/gastrouts'
    xmlns:data='http://www.google.com/schema/data'
    xmlns:expr='http://www.google.com/gastrouts/expressions'>
    <head>
        <meta charset='UTF-8'/>
        <meta content='width=device-width, initial-scale=1.0' name='viewport'/>
        <title>
            <data:blog.pageTitle/>
        </title>

        <link href='https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&amp;display=swap' rel='stylesheet'/>
        <link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css' rel='stylesheet'/>

        <b:skin><![CDATA[ /* Blogger Required Skin */ ]]></b:skin>

        <style>
            :root {
                --primary: #6366f1;
                --primary-dark: #4f46e5;
                --secondary: #06b6d4;
                --dark: #0f172a;
                --light: #f8fafc;
                --white: #ffffff;
                --glass: rgba(255, 255, 255, 0.7);
                --glass-border: rgba(255, 255, 255, 0.3);
                --shadow: 0 20px 50px rgba(0, 0, 0, 0.1);
                --grad: linear-gradient(135deg, #6366f1 0%, #06b6d4 100%);
            }

            * { box-sizing: border-box; transition: all 0.3s ease; }

            body {
                margin: 0;
                background-color: var(--light);
                color: var(--dark);
                font-family: 'Outfit', sans-serif;
                overflow-x: hidden;
            }

            /* Advanced Animations */
            @keyframes fadeIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
            @keyframes pulse { 0% { opacity: 0.6; } 50% { opacity: 1; } 100% { opacity: 0.6; } }
            @keyframes float { 0% { transform: translateY(0px); } 50% { transform: translateY(-15px); } 100% { transform: translateY(0px); } }
            @keyframes bgShift { 0% { background-position: 0% 50%; } 50% { background-position: 100% 50%; } 100% { background-position: 0% 50%; } }
            @keyframes slideIn { from { transform: translateX(-50px); opacity: 0; } to { transform: translateX(0); opacity: 1; } }

            .animate { animation: fadeIn 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards; }
            .delay-1 { animation-delay: 0.2s; }
            .delay-2 { animation-delay: 0.4s; }

            /* Ad Placements */
            .ad-slot {
                width: 100%;
                max-width: 728px;
                min-height: 90px;
                margin: 20px auto;
                background: rgba(0,0,0,0.03);
                border: 1px dashed #cbd5e1;
                border-radius: 12px;
                display: flex;
                align-items: center;
                justify-content: center;
                color: #94a3b8;
                font-size: 0.8rem;
                overflow: hidden;
            }

            /* Navbar */
            .navbar {
                background: var(--glass);
                backdrop-filter: blur(10px);
                padding: 1rem 10%;
                display: flex;
                justify-content: space-between;
                align-items: center;
                border-bottom: 1px solid var(--glass-border);
                position: sticky;
                top: 0;
                z-index: 1000;
            }

            .logo {
                font-size: 1.6rem;
                font-weight: 700;
                color: var(--primary);
                text-decoration: none;
                display: flex;
                align-items: center;
                gap: 12px;
            }

            .btn-started {
                background: var(--grad);
                color: white;
                padding: 12px 28px;
                border-radius: 50px;
                text-decoration: none;
                font-weight: 600;
                box-shadow: 0 10px 20px rgba(99, 102, 241, 0.3);
            }

            .btn-started:hover { transform: translateY(-3px); box-shadow: 0 15px 30px rgba(99, 102, 241, 0.4); }

            /* Hero Section */
            .hero {
                padding: 120px 20px;
                text-align: center;
                position: relative;
                background: radial-gradient(circle at top right, rgba(99, 102, 241, 0.05), transparent),
                            radial-gradient(circle at bottom left, rgba(6, 182, 212, 0.05), transparent);
            }

            .hero h1 {
                font-size: clamp(2.5rem, 6vw, 4rem);
                font-weight: 800;
                margin-bottom: 20px;
                background: var(--grad);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                letter-spacing: -2px;
            }

            .hero p { color: var(--text-muted); font-size: 1.25rem; max-width: 700px; margin: 0 auto 50px; }

            /* Search Box (Glassmorphism) */
            .search-card {
                max-width: 900px;
                margin: 0 auto;
                background: var(--white);
                padding: 15px;
                border-radius: 24px;
                display: flex;
                border: 1px solid var(--border);
                box-shadow: var(--shadow);
            }

            .search-card input {
                flex: 1;
                border: none;
                padding: 20px 35px;
                font-size: 1.2rem;
                font-family: inherit;
                outline: none;
                background: transparent;
            }

            .btn-action {
                background: var(--dark);
                color: white;
                border: none;
                padding: 0 40px;
                border-radius: 18px;
                font-weight: 600;
                font-size: 1.1rem;
                cursor: pointer;
            }

            .btn-action:hover { background: var(--primary); }

            /* Progress UI */
            .progress-card {
                max-width: 600px;
                margin: 40px auto;
                background: var(--white);
                padding: 30px;
                border-radius: 20px;
                box-shadow: var(--shadow);
                display: none;
                flex-direction: column;
                gap: 20px;
            }

            .progress-bar-wrap { width: 100%; background: #f1f5f9; border-radius: 10px; height: 12px; overflow: hidden; }
            #progressBar { width: 20%; height: 100%; background: var(--grad); transition: 0.5s cubic-bezier(0.1, 0.7, 0.1, 1); }
            #statusText { font-weight: 600; font-size: 1rem; color: var(--primary); }

            /* Result Card */
            #result {
                display: none;
                margin-top: 50px;
                animation: float 3s ease-in-out infinite;
            }

            /* Features Section */
            .features {
                padding: 100px 10%;
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
                gap: 40px;
                background: var(--white);
            }

            .f-card {
                padding: 40px;
                border-radius: 24px;
                background: var(--light);
                border: 1px solid #e2e8f0;
            }

            .f-card i { font-size: 2.5rem; margin-bottom: 20px; color: var(--primary); }
            .f-card h3 { font-size: 1.5rem; margin-bottom: 15px; }
            .f-card p { color: #64748b; line-height: 1.7; }

            /* Footer */
            footer { padding: 60px 10%; text-align: center; border-top: 1px solid #e2e8f0; }
            .social-links { display: flex; justify-content: center; gap: 20px; margin-bottom: 20px; }
            .social-links a { width: 45px; height: 45px; background: #f1f5f9; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: var(--dark); text-decoration: none; }
            .social-links a:hover { background: var(--primary); color: white; }

            @media (max-width: 768px) {
                .navbar { padding: 1rem 5%; }
                .search-card { flex-direction: column; height: auto; padding: 10px; }
                .btn-action { padding: 18px; width: 100%; }
                .hero { padding: 80px 20px; }
            }
        </style>
    </head>
    <body>
        <nav class='navbar'>
            <a class='logo' href='/'>
                <i class="fab fa-instagram"></i> InstaStream <span>AI</span>
            </a>
            <a class='btn-started' href='#'>Sign Up</a>
        </nav>

        <main class='hero animate'>
            <h1>Download Reels <br/>
 Without Limits.</h1>
            <p>The fastest, safest, and most intelligent Instagram downloader. Free forever, no watermark, works on any device.</p>

            <div class='search-card'>
                <input id='urlInput' placeholder='Paste Instagram URL here...' type='text'/>
                <button class='btn-action' id='downloadBtn' onclick='startDownload()'>
                    Download Now
                </button>
            </div>

            <div class='progress-card' id='progressUI'>
                <div id='statusText'>Initializing...</div>
                <div class='progress-bar-wrap'>
                    <div id='progressBar'></div>
                </div>
                <div style="font-size: 0.85rem; color: #64748b;">This might take a few seconds using our backup servers.</div>
            </div>

            <div id='result'>
                <a class='btn-started' id='downloadLink' style='font-size: 1.3rem; padding: 20px 60px;' target='_blank'>
                    <i class='fas fa-circle-check'></i> Download Video
                </a>
                <p style="margin-top: 20px; color: #64748b;">Downloaded successfully! âœ…</p>
            </div>
        </main>

        <section class='features animate' style='background: linear-gradient(-45deg, #f8fafc, #eff6ff, #f8fafc); background-size: 400% 400%; animation: bgShift 15s ease infinite;'>
            <div class='f-card animate delay-1'>
                <i class="fas fa-bolt"></i>
                <h3>Turbo Speed</h3>
                <p>Advanced multi-threaded technology ensures your downloads are finished in seconds, not minutes.</p>
            </div>
            <div class='f-card animate delay-2'>
                <i class="fas fa-shield-halved"></i>
                <h3>Privacy First</h3>
                <p>We don't store your data or link history. Everything is processed and deleted instantly.</p>
            </div>
            <div class='f-card animate delay-1' style='animation-delay:0.6s;'>
                <i class="fas fa-infinity"></i>
                <h3>Smart Failover</h3>
                <p>Exclusive AI technology that automatically switches servers if Instagram blocks the connection.</p>
            </div>
        </section>

        <!-- Bottom Ad Slot -->
        <div class='ad-slot' style='margin: 50px auto;'>
            <span>ADSTERRA FOOTER AD</span>
        </div>

        <footer>
            <div class="social-links">
                <a href="#">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="#">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="#">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="#">
                    <i class="fab fa-linkedin-in"></i>
                </a>
            </div>
            <p>&copy; 2024 InstaStream Pro. All Rights Reserved.</p>
        </footer>

        <script>
            const API_BASE = "https://argha-7-insta-downloader-web.hf.space";

            async function startDownload() {
                const url = document.getElementById('urlInput').value.trim();
                const btn = document.getElementById('downloadBtn');
                const progressUI = document.getElementById('progressUI');
                const statusText = document.getElementById('statusText');
                const progressBar = document.getElementById('progressBar');
                const resultDiv = document.getElementById('result');

                if (!url) {
                    alert('Please paste a link first!');
                    return;
                }

                // Reset and Show Progress
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Loading...';
                resultDiv.style.display = 'none';
                progressUI.style.display = 'flex';
                progressBar.style.width = '20%';
                statusText.innerText = 'Connecting to server...';

                try {
                    const response = await fetch(`${API_BASE}/download`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ url: url })
                    });
                    const data = await response.json();

                    if (data.success) {
                        if (data.status === 'ready') {
                            showSuccess(data.filename);
                        } else if (data.status === 'pending') {
                            statusText.innerText = 'Server blocked. Activating Smart Backup...';
                            progressBar.style.width = '50%';
                            pollStatus(data.job_id);
                        }
                    } else {
                        showError(data.message);
                    }
                } catch (e) {
                    showError('Server is currently busy. Try again.');
                }
            }

            async function pollStatus(jobId) {
                const statusText = document.getElementById('statusText');
                const progressBar = document.getElementById('progressBar');
                let count = 0;

                const interval = setInterval(async () => {
                    count++;
                    if (count > 60) { clearInterval(interval); showError('Process Timeout.'); return; }

                    try {
                        const res = await fetch(`${API_BASE}/status/${jobId}`);
                        const data = await res.json();

                        if (data.status === 'ready') {
                            clearInterval(interval);
                            showSuccess(data.filename);
                        } else {
                            statusText.innerText = `GitHub Processing... (${count * 5}s)`;
                            progressBar.style.width = `${50 + (count * 0.7)}%`;
                        }
                    } catch (e) {}
                }, 5000);
            }

            function showSuccess(filename) {
                document.getElementById('progressUI').style.display = 'none';
                const res = document.getElementById('result');
                res.style.display = 'block';
                document.getElementById('downloadLink').href = `${API_BASE}/files/${filename}`;
                resetBtn();
            }

            function showError(msg) {
                document.getElementById('statusText').innerText = msg;
                document.getElementById('statusText').style.color = '#ef4444';
                resetBtn();
            }

            function resetBtn() {
                const btn = document.getElementById('downloadBtn');
                btn.disabled = false;
                btn.innerText = 'Download Now';
            }
        </script>
    </body>
</html>
