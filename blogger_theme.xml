            .modal {
                display: none;
                position: fixed;
                top: 0; left: 0; width: 100%; height: 100%;
                background: rgba(0,0,0,0.6);
                z-index: 9999;
                backdrop-filter: blur(5px);
                align-items: center;
                justify-content: center;
            }

            .modal-content {
                background: white;
                padding: 40px;
                border-radius: 24px;
                max-width: 400px;
                width: 90%;
                text-align: center;
                animation: fadeIn 0.3s ease;
            }

            .btn-action {
                background: var(--dark);
                color: white;
                border: none;
                padding: 0 40px;
                border-radius: 18px;
                font-weight: 600;
                font-size: 1.1rem;
                cursor: pointer;
            }

            .btn-action:hover { background: var(--primary); }

            /* Pricing Section */
            .pricing {
                padding: 100px 10%;
                text-align: center;
                background: var(--light);
            }

            .pricing-grid {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                gap: 30px;
                margin-top: 50px;
            }

            .p-card {
                background: var(--white);
                padding: 40px;
                border-radius: 24px;
                border: 1px solid #e2e8f0;
                position: relative;
                overflow: hidden;
            }

